CREATE TABLE passwordReset (
    pwdResetId int(11) PRIMARY KEY AUTO_INCREMENT not null,
    pwdResetEmail TEXT not null,
    pwdResetSelector TEXT not null,
    pwdResetToken LONGTEXT not null,
    pwdResetExpires TEXT not null
);